@model uURL.Models.ShortUrl

@{
    ViewBag.Title = "uURL - URL Shortener";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@{
    var Message = "Enter a URL to Shorten.";
    if (IsPost) {
        Message = Model.URL + @" Shortened to http://uurl.co/" + Model.ShortName;
    }  
}

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <h1>@Message</h1>
    <div class="editor-label">
        @Html.LabelFor(model => model.URL)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.URL)
        @Html.ValidationMessageFor(model => model.URL, null, new { @class = "error_message" })
    </div>

    <p>
        <input type="submit" value="Shorten" />
    </p>
}